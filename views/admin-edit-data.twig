{% extends 'admin-layout.twig' %}

{% block content %}
	<div class="container add-data">
		<div class="row">
			
			<h2>{{ title }}</h2>
			
			{% for key, item in document %}
				{% if structure[key] %}
					<div class="row section">
					    <div class="col-sm-2">
					    	<h4>{{key}}</h4>
					    </div>
					    <div class="col-sm-10">
						    {% if structure[key] == 'textarea' %}
								<textarea class="data" name="{{key}}">{{ item }}</textarea>
							{% elseif structure[key] == 'input' %}
								<input class="data" type="text" name="{{key}}" value="{{ item }}">
						    {% endif %}
					    </div>
					</div>
				{% endif %}
			{% endfor %}
			<a id="edit" role="button" href="/admin/edit-data/{{ colName }}/{{ document._id }}" class="btn btn-primary">Save edit</a>
		</div>
	</div>
{% endblock %}