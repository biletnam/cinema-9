{% extends "base-layout.twig" %}

{% block content %}
    <div class="row">
		<div class="col-md-8">
			<h2>Posts</h2>
			{% for post in posts %}
			    <div class="item col-sm-12 well">
				    <h3>{{ post.title }}</h3>
				    <h4>{{ post.perex }}</h4>
					<p>{{ post.text }}</p>

					<a href="/post/{{ post.url }}">Read more</a>
				</div>
			{% else %}
			    No posts yet.
			{% endfor %}

		</div>
		<div class="col-md-4 sidebar">
			<h2>Sidebar</h2>
			{% for fact in spitFacts %}
			    <div class="item col-sm-12 well">
				    <h3>{{ fact.title }}</h3>
					<p>{{ fact.text }}</p>
				</div>
			{% else %}
			    No spit facts yet.
			{% endfor %}
		</div>
	</div>
{% endblock %}
